name: Build vLLM runai Images (nightly)

on:
  schedule:
    - cron: "0 0 * * *"  # Runs daily at midnight UTC
  workflow_dispatch:      # Allows manual trigger

jobs:
  build-vllm:
    runs-on: ubuntu-latest
    strategy:
      fail-fast: false
      matrix:
        target:
          - baseimage: uptospace/vllm:nightly-cpu
            name: cpu
            platform: linux/amd64
          - baseimage: uptospace/vllm:nightly-arm
            name: arm
            platform: linux/arm64
          - baseimage: vllm/vllm-openai:latest
            name: nvidia
            platform: linux/amd64
          - baseimage: uptospace/vllm:nightly-amd
            name: amd
            platform: linux/amd64
          - baseimage: uptospace/vllm:nightly-tpu
            name: tpu
            platform: linux/amd64
          
    steps:
      - name: Check code
        uses: actions/checkout@v4

      - name: Login to Docker Hub
        uses: docker/login-action@v3
        with:
          username: ${{ vars.DOCKERHUB_USERNAME }}
          password: ${{ secrets.DOCKERHUB_TOKEN }}

      - name: Set up QEMU
        uses: docker/setup-qemu-action@v3
        
      - name: Set up Docker Buildx
        uses: docker/setup-buildx-action@v3

      - name: Build and push
        uses: docker/build-push-action@v6
        with:
          context: .
          platforms: ${{ matrix.target.platform }}
          build-args: ${{ matrix.target.baseimage }}
          push: true
          tags: |
            uptospace/vllm:nightly-runai-${{ matrix.target.name }}
